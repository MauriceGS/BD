<p id="notice"><%= notice %></p>

<h1>Listing Venta</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Cantidad productos</th>
      <th>Empleado</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venta.each do |ventum| %>
      <tr>
        <td><%= ventum.fecha %></td>
        <td><%= ventum.cantidad_productos %></td>
        <td>   <%= Empleado.find(ventum.empleado_id).nombre %></td>
        <td>  <%= Cliente.find(ventum.cliente_id).nombre %></td>
        <td><%= link_to 'Show', ventum %></td>
        <td><%= link_to 'Edit', edit_ventum_path(ventum) %></td>
        <td><%= link_to 'Destroy', ventum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

